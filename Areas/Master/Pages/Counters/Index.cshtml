@page
@model NetCoreDemo.Areas.Master.Pages.Counters.IndexModel
@{
}

<h2>Counter List</h2>
<div class="card">
    <div class="card-body">
        <a class="btn btn-primary" asp-area="Master" asp-page="/Counters/Create">Create</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Counter in Model.Counters)
                {
                    <tr>
                        <td>@Counter.CounterId</td>
                        <td>@Counter.CounterName</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
