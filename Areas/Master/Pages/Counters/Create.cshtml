@page
@model NetCoreDemo.Areas.Master.Pages.Counters.CreateModel
@{
}

<div class="row d-flex justify-content-center">
    <div class="col-3">
    </div>
    <div class="col-6">
        <div class="card w-100">
            <div class="card-header"><h2>Create Counter</h2></div>
            <div class="card-body">
                <form method="post" class="needs-validation">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="mb-2">
                        <label class="mb-2">Id</label>
                        <input required asp-for="InputModel.CounterId" type="number" class="form-control" placeholder="Enter ID" />
                    </div>
                    <div class="mb-2">
                        <label class="mb-2">Name</label>
                        <input asp-for="InputModel.CounterName" type="text" class="form-control" placeholder="Enter Name" />
                    </div>
                    <button class="btn btn-success">Save</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-3">
    </div>
</div>

